<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF762"
    tools:context=".Sign_in">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/signImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/signin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textStyle="bold"
                android:layout_below="@+id/signImg"
                android:textSize="20sp"
                android:textColor="#1D7BEC"
                android:id="@+id/tv1"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="20dp"
                android:text="welcome_back"
                android:textColor="#1D7BEC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:hint="username"
                android:textColorHint="#97BDEA"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="10dp"
                android:minHeight="48dp"

                />

            <EditText
                android:id="@+id/edittext2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext1"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="10dp"
                android:textColorHint="#97BDEA"
                android:hint="password"
                android:minHeight="48dp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext2"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                android:textColor="#1D7BEC"
                android:text="remember_me"
                android:id="@+id/checkbx"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext2"
                android:layout_marginStart="265dp"
                android:layout_marginTop="15dp"
                android:text="forget_password"
                android:textColor="#1D7BEC"
                android:textStyle="bold"
                android:id="@+id/tv3"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:id="@+id/card">

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="16dp"
                    android:text="sign_in"
                 android:background="#1835EA"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/btn1"
                    android:textColor="@color/white"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="or_contiune_with"
                android:textStyle="bold"
                android:textColor="#1D7BEC"
                android:textSize="15sp"
                tools:ignore="TextSizeCheck" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/google"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/tv4"
                android:layout_marginLeft="28dp"
                android:id="@+id/img2"
               />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook2"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/tv4"
                android:layout_centerHorizontal="true"
                android:id="@+id/img3"
                 />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/apple2"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/tv4"
                android:layout_marginStart="290dp"
                android:id="@+id/img4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img3"
                android:layout_marginStart="80dp"
                android:layout_marginTop="35dp"
                android:text="dont_have_an_account"
                android:textColor="#6F9DD4"
                android:textSize="14sp"
                tools:ignore="TextSizeCheck"
                android:id="@+id/tv5"/>


            <TextView
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_below="@id/img3"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="20dp"
                android:textColor="#1D7BEC"
                android:textStyle="bold"
                android:text="sign_up"
                android:textSize="16sp"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:id="@+id/btn2"
                />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>